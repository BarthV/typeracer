<% if (signed_in?) %>
  <h1 id="welcome-title">
		Welcome, <%= current_user.username %>!
	</h1>
	<div class="user-show">
		<%= link_to "See Your Stats", user_url(current_user) %>
	</div>
	<div class="race"><a href="#heats/new_normal">Race Now!</a></div>

<% else %>
	<div class="row">
	  <div class="col-md-5">
			<h2 id="sign_in">
				Sign In
			</h2>
			<%= render "shared/login", user: User.new, url: session_url %>

			<h2 id="sign_up">
				Sign Up
			</h2>
			<%= render "shared/login", user: User.new, url: users_url %>
		</div>

	  <div class="col-md-5">
			<a href="#heats/new_normal" class="btn btn-danger btn-large guest-btn" role="button">
				Race As A Guest
			</a>
		</div>
	</div>

<% end %>

<script>
$(document).ready(function(){
  TypeRacer.initialize();
});
</script>